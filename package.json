{
  "name": "iobroker.ochsner-roomterminal",
  "version": "0.0.13",
  "description": "Interface to the Ochsner Roomterminal Webserver (web2comm)",
  "author": {
    "name": "Armin Stegerer",
    "email": "Armin.Stegerer@t-online.de"
  },
  "homepage": "https://github.com/armintan/ioBroker.ochsner-roomterminal",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "ochsner",
    "heatpump",
    "roomterminal",
    "web2comm"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:armintan/ioBroker.ochsner-roomterminal.git"
  },
  "engines": {
    "node": ">= 20"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.2.3",
    "digest-fetch": "v2",
    "node-fetch": "v2",
    "xml2js": "^0.6.0"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.7.2",
    "@alcalzone/release-script-plugin-license": "^3.7.0",
    "@alcalzone/release-script-plugin-manual-review": "^3.7.0",
    "@iobroker/adapter-dev": "^1.4.0",
    "@iobroker/testing": "^5.0.3",
    "@tsconfig/node20": "^20.1.4",
    "@types/chai-as-promised": "^7.1.8",
    "@types/chai": "^4.3.20",
    "@types/lodash": "^4.17.0",
    "@types/lodash-es": "^4.17.12",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.3",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^17.0.4",
    "@types/sinon-chai": "^3.2.12",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "chai": "^4.5.0",
    "chai-as-promised": "^7.1.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "mocha": "^11.1.0",
    "prettier": "^3.2.5",
    "proxyquire": "^2.1.3",
    "rimraf": "^6.0.1",
    "sinon": "^19.0.2",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "~5.0.4"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).{json,json5}",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf build",
    "build": "build-adapter ts",
    "watch": "build-adapter ts --watch",
    "prebuild:ts": "rimraf build",
    "build:ts": "build-adapter ts",
    "watch:ts": "build-adapter ts --watch",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "lint": "eslint --ext .ts,.tsx src/",
    "translate": "translate-adapter",
    "release": "release-script patch --yes",
    "release-minor": "release-script minor --yes",
    "release-major": "release-script major --yes"
  },
  "bugs": {
    "url": "https://github.com/armintan/ioBroker.ochsner-roomterminal/issues"
  },
  "readmeFilename": "README.md"
}
